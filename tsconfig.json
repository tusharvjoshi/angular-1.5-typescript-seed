{
  "compilerOptions": {
    "target": "es5",
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "module": "commonjs",
    "experimentalDecorators": false,
    "outDir": "/builds/"
  },
  "exclude": [
    "node_modules",
    "builds",
    "dist",
    "generator-templates",
    "typings/main.d.ts",
    "typings/main"
  ],
  "filesGlob": [
        "./src/**/*.ts",
        "!./src/**/*.spec.ts",
        "!./node_modules/**/*.ts",
        "src/custom_typings.d.ts",
        "typings/browser.d.ts"
    ],
  "compileOnSave": false,
  "buildOnSave": false
}
